# =============================================================================
# HabitOS Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=habitos
POSTGRES_USER=habitos_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=production
SECRET_KEY=your_very_long_and_secure_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters

# =============================================================================
# Database Connection Pooling (Production)
# =============================================================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# Email Configuration (Gmail Example)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# =============================================================================
# AI Configuration
# =============================================================================
# OpenAI (Legacy - Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini (Recommended)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# =============================================================================
# Google OAuth Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_INSIGHTS=true
ENABLE_JOURNAL_PROMPTS=true
ENABLE_SENTIMENT_ANALYSIS=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:5001
VITE_APP_NAME=HabitOS
VITE_APP_VERSION=1.0.0

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# New Relic for performance monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# =============================================================================
# Production Deployment Configuration
# =============================================================================
# For Render deployment, these will be set automatically
# For local development, you can override them here 