# =============================================================================
# HabitOS Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your actual production values
# NEVER commit production environment files to version control!

# =============================================================================
# Application Configuration
# =============================================================================
FLASK_ENV=production
FLASK_APP=run.py
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET_KEY=your-jwt-secret-production-key-change-this

# =============================================================================
# Database Configuration (Production)
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database_name
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# Email Configuration (Production)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-production-email@gmail.com
MAIL_PASSWORD=your-production-app-password
MAIL_DEFAULT_SENDER=your-production-email@gmail.com

# =============================================================================
# AI/OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# =============================================================================
# OAuth Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# =============================================================================
# Logging Configuration (Production)
# =============================================================================
LOG_LEVEL=WARNING
LOG_FILE=/var/log/habitos/habitos.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=10

# =============================================================================
# Security Configuration (Production)
# =============================================================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# =============================================================================
# Monitoring Configuration (Production)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=HabitOS-Production

# =============================================================================
# Redis Configuration (Production)
# =============================================================================
REDIS_URL=redis://username:password@host:port/0
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_FOLDER=/var/habitos/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# =============================================================================
# Feature Flags (Production)
# =============================================================================
ENABLE_AI_FEATURES=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_GOOGLE_OAUTH=True
ENABLE_RATE_LIMITING=True
ENABLE_CACHING=True
